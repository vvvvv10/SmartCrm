<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.demo.customer.ActivitiesMapper">
    <select id="getById" resultType="com.alibaba.demo.customer.ActivitiesDO" resultMap="customerMap">
        select * from activities where id = #{id}
    </select>
    <resultMap type="com.alibaba.demo.customer.ActivitiesDO" id="customerMap">
         <result property="id" column="id"/>
         <result property="activityName" column="activity_name"/>
         <result property="department" column="department"/>
         <result property="person" column="person"/>
         <result property="status" column="status"/>
         <result property="startTime" column="start_time"/>
         <result property="endTime" column="end_time"/>
     </resultMap>
</mapper>
